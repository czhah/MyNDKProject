<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:skin="http://schemas.android.com/android/skin"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    skin:skin_enable="true"
    android:background="@color/color_background"
    tools:context="com.thedream.cz.myndkproject.activity.MySkinActivity">

    <Button
        android:id="@+id/btn_skin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        skin:skin_enable="true"
        android:textColor="@color/color_text"
        android:text="换肤" />

    <Button
        android:id="@+id/btn_restore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_skin"
        skin:skin_enable="true"
        android:textColor="@color/color_text"
        android:text="还原" />


    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        skin:skin_enable="true"
        app:layout_constraintTop_toBottomOf="@id/btn_restore" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        skin:skin_enable="true"
        android:textColor="@color/color_text"
        android:text="我是测试数据"
        app:layout_constraintTop_toBottomOf="@id/iv_logo" />

</android.support.constraint.ConstraintLayout>
